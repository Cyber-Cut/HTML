<script>
  function toggleServices(el) {
    const list = el.nextElementSibling;
    const arrow = el.querySelector('.triangle');
    list.style.display = list.style.display === 'block' ? 'none' : 'block';
    arrow.classList.toggle('rotated');
  }
</script>

